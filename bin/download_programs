#!/bin/bash
sudo pacman -S --needed base-devel git
git clone https://aur.archlinux.org/pikaur.git
cd pikaur
makepkg -fsri
cd ../
rm -rf pikaur

pikaur -S \
alacritty \
bpytop-git \
cmatrix \
compton \
cowsay \
ctags \
discord \
exa-git \
feh \
firefox \
flameshot \
i3-gaps \
i3lock-fancy-git \
lolcat \
man \
neofetch \
neovim \
network-manager-applet \
nodejs \
openssh \
polybar \
rustup \
starship \
texlive-most \
unzip \
vifm \
xclip \
xorg \
yadm \
zathura \
zathura-pdf-mupdf \
zip \
zsh \
